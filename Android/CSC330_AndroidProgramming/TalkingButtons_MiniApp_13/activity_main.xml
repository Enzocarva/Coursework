<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button android:id="@+id/theDog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theDog_button"
            android:onClick="clickHandler">
        </Button>
        <Button android:id="@+id/theFarmer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theFarmer_button"
            android:onClick="clickHandler">
        </Button>
        <Button android:id="@+id/theSailor_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theSailor_button"
            android:onClick="clickHandler">
        </Button>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button android:id="@+id/bit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bit_button"
            android:onClick="clickHandler">
        </Button>
        <Button android:id="@+id/loves_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loves_button"
            android:onClick="clickHandler">
        </Button>
        <Button android:id="@+id/killed_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/killed_button"
            android:onClick="clickHandler">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button android:id="@+id/exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exit_button"
            android:onClick="clickHandler">
        </Button>
    </LinearLayout>

</LinearLayout>